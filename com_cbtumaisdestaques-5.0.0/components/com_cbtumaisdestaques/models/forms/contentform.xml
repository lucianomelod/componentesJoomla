    <field name="tittle" filter="safehtml" type="text" label="COM_CBTUMAISDESTAQUES_FORM_LBL_CONTENT_TITTLE" description="COM_CBTUMAISDESTAQUES_FORM_DESC_CONTENT_TITTLE" hint="COM_CBTUMAISDESTAQUES_FORM_LBL_CONTENT_TITTLE"/>
